{{ form_start(form, {'attr': {'id': 'candidateForm'}}) }}
<section class="gray-bg">
	<div class="container">
		<div class="row">
			<div class="score-container">
				<h4>
					<img src="https://i.imgur.com/s9bPVaK.gif" style="height: 80px; width: 201px;">
					&nbsp;
																																																																									                            &nbsp; Hooray ! Your profile is complete.
				</h4>
				<div class="c100 p100 small complete ">
					<span>100%</span>
					<div class="slice">
						<div class="bar"></div>
						<div class="fill"></div>
					</div>
				</div>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
</section>

<section class="section-padding">
	<div class="container">
		<div class="row">
			<h3 class="text-extrabold">Your personal informations</h3>
			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="input-field">
					<select id="gender" name="gender">
						<option value="">Choose an option...</option>
						{% for gender in genders %}
							{% if gender.id is defined %}
								<option value="{{ gender.id }}">
									{{ gender.name }}
								</option>
							{% endif %}
						{% endfor %}
					</select>
					<label for="gender" class="active">Gender</label>
				</div>
			</div>
			<div class="clearfix visible-sm"></div>
			<!-- Informations personnelles -->
			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="input-field">
					{{ form_row(form.firstname, {'attr': {'id': 'firstname'}}) }}

				</div>
			</div>

			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="input-field">
					{{ form_row(form.lastname, {'attr': {'id': 'lastname'}}) }}

				</div>
			</div>

			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="input-field">
					{{ form_row(form.location, {'attr': {'id': 'location'}}) }}

				</div>
			</div>

			<div class="col-xs-12 col-sm-8">
				<div class="input-field">
					{{ form_row(form.adress, {'attr': {'id': 'adress'}}) }}

				</div>
			</div>

			<!-- Photo -->
			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="file-field input-field" style="margin-top: 32px;">
					<div class="btn btn-lg primary waves-effect waves-light">
						<span>
							<i class="material-icons">insert_photo</i>
							Photo</span>
						{# {{ form_row(form.profilPicture, {'attr': {'id': 'profilPicture'}}) }} #}
					</div>

					<div class="existing-file">
						<a href="#!" target="_blank">
							<i class="material-icons">&#xE24D;</i>
							profil_picture.jpg</a>
					</div>
					<div class="file-path-wrapper">
						<input class="file-path validate" type="text" placeholder="Upload your ID photo" readonly>
					</div>
				</div>
			</div>

			<!-- Informations supplÃ©mentaires -->
			<div class="col-xs-12 col-sm-6">
				<div class="input-field">
					{{ form_row(form.country, {'attr': {'id': 'country'}}) }}

				</div>
			</div>

			<div class="col-xs-12 col-sm-6">
				<div class="input-field">
					{{ form_row(form.nationality, {'attr': {'id': 'nationality'}}) }}

				</div>
			</div>

			<div class="col-xs-12 col-sm-6">
				<div class="input-field">
					{{ form_row(form.dateBirth, {'attr': {'id': 'dateBirth'}}) }}

				</div>
			</div>

			<div class="col-xs-12 col-sm-6">
				<div class="input-field">
					{{ form_row(form.placeBirth, {'attr': {'id': 'placeBirth'}}) }}

				</div>
			</div>
			<div class="row mt-40">
				<h3 class="text-extrabold">Your professional profile</h3>
				<div class="col-xs-12 col-sm-6">

					<div class="card card-panel passport">
						<div class="file-field input-field">
							<div class="btn btn-lg primary waves-effect waves-light">
								<span>
									<i class="material-icons">&#xE24D;</i>
									Passport</span>
								{# {{ form_row(form.passportFile, {'attr': {'id': 'passportFile'}}) }} #}
								<input id="passport" size="20000000" accept=".pdf,.jpg,.doc,.docx,.png,.gif" name="passport" type="file">
							</div>
							<div class="existing-file">
								<a href="#!" target="_blank">
									<i class="material-icons">&#xE24D;</i>
									passeport.jpg</a>
							</div>
							<div class="file-path-wrapper">
								<input class="file-path validate" type="text" placeholder="Upload your passport" readonly>
							</div>
						</div>

						<div class="file-field input-field">
							<div class="btn btn-lg primary waves-effect waves-light">
								<span>
									<i class="material-icons">&#xE24D;</i>
									CV</span>
								{# {{ form_row(form.cv, {'attr': {'id': 'cv'}}) }} #}
								<input id="cv" size="20000000" accept=".pdf,.jpg,.doc,.docx,.png,.gif" name="cv" type="file">
							</div>

							<div class="existing-file">
								<a href="#!" target="_blank">
									<i class="material-icons">&#xE24D;</i>
									CV.pdf</a>
							</div>
							<div class="file-path-wrapper">
								<input class="file-path validate" type="text" placeholder="Upload your Curriculum Vitae" readonly>
							</div>
						</div>

					</div>
				</div>
				<div class="col-xs-12 col-sm-6">
					<div class="col-xs-12 col-sm-12">
						<div class="input-field" style="margin-top: 5px;">
							<select id="candidate_category" name="candidate[category][]" multiple data-placeholder="Type in or Select job sector you would be interested in." style="display: block;">
								{% for jobCategory in jobsCategory %}
									<option value="{{ jobCategory.id }}">{{ jobCategory.name }}</option>
								{% endfor %}
							</select>

							<label class="active required" for="candidate_category">Interest in job sector</label>
						</div>
						<div class='red-text'></div>
					</div>
					<div class="col-xs-12 col-sm-12">
						<div class="input-field">
							<select id="experience" required="required" name="experience">
								#}
								<option value="">Choose</option>
								{% for experience in experiences %}
									<option value="{{ experience.id }}">{{ experience.time }}</option>
								{% endfor %}
							</select>
						</div>

						<label for="experience" class="active">Experience</label>
					</div>
				</div>
			</div>
			<div class="col-xs-12 col-sm-12">
				<div class="input-field">
					{{ form_row(form.shortDescription, {'attr': {'id': 'shortDescription'}}) }}

				</div>
			</div>

		</div>
	</div>
</section>
<section class="section-padding gray-bg">
	<div class="container">
		<div class="row">
			<h3 class="text-extrabold">Your LuxuryServices account</h3>
			{# <div class="col-xs-12 col-sm-4">
						                            <div class="input-field">
						                                <input required="required" id="email" name="email" type="email" value="">
						                                <label for="email">Email</label>
						                            </div>
						                        </div>
						                        <div class="col-xs-12 col-sm-4">
						                            <div class="input-field">
						                                <input id="password" name="password" type="password" value="">
						                                <label for="password">Change your password here</label>
						                            </div>
						                        </div>
						                        <div class="col-xs-12 col-sm-4">
						                            <div class="input-field">
						                                <input id="password_repeat" name="password_repeat" type="password" value="">
						                                <label for="password_repeat">Confirm your new password</label>
						                            </div>
						                        </div>
						                    </div> #}
			<div class="row">
				<div class="col-xs-12 mt-40 mb-80 delete-account">
					<a href="#!" onclick="return prompt('Please Type \'Delete my account\' to delete your K-Yachting Services account:') == 'Delete my account'" class="btn btn-block btn-lg waves-effect waves-light">
						<i class="material-icons">&#xE872;</i>Delete my account</a>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 col-sm-6 col-md-4">
					<a href="#!" class="btn btn-block btn-lg border primary waves-effect waves-light">
						<i class="fa fa-long-arrow-left"></i>
						Back home</a>
				</div>
				<div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-4">
					<button type="submit" class="btn btn-block btn-lg gradient secondary waves-effect waves-light">
						<span>
							<strong>UPDATE</strong>
							NOW</span>
					</button>
				</div>
			</div>

		</div>
	</section>

	{{ form_end(form) }}
 