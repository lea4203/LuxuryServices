{% extends 'base.html.twig' %}



{% block body %}
    
	<!-- Page Content-->
	<section class="single-project-section section-padding light-gray-bg">
		<div class="container">
			<div class="project-overview">
				<div class="row mb-80">
					<div class="col-xs-12 col-md-8">
						<p class="ref grey-text no-margin">Ref.
							{{ job.reference }}</p>
						<h2>{{ job.jobTitle }}</h2>
						<p>{{ job.description }}</p>
					</div>
					<div class="col-xs-12 col-md-4 quick-overview">
						<ul class="portfolio-meta">
							<li>
								<span>Published at</span>
								{{ job.dateCreated ? job.dateCreated|date('d F Y') : 'N/A' }}
							</li>
							<li>
								<span>Position</span>
								{{ job.jobTitle }}
							</li>
							<li>
								<span>Contract Type</span>Full Time
							</li>
							<li>
								<span>Salary</span>
								{{ job.salary }}
								&euro;
							</li>
							<li>
								<span>Location</span>
								{{ job.location }}
							</li>
							<li>
								<span>Starting date</span>
								{{ job.dateCreated ? job.dateCreated|date('Y-m-d') : 'N/A' }}
							</li>
						</ul>
					<form action="{{ path('app_candidature_new')}}" method="POST">

												<input type="hidden" name="apply" value="{{ job.id }}"/>
												<button class="btn btn-md primary waves-effect waves-light">
													Apply
												</button>
											</form>
										</div>


						<div class="btn btn-block btn-success mt-30 waves-effect waves-light disabled">You have applied for this job</div>
					</div>
				</div>
			</div>

			<nav class="single-post-navigation no-margin" role="navigation">
				<div class="row">
					<div class="col-xs-6 col-sm-6 col-md-4">
						<div class="previous-post-link">
							{% if previousJobs %}
								<a class="btn border primary waves-effect waves-dark" href="{{ path('app_jobs_show', {'id': previousJobs.id}) }}">
									<i class="fa fa-long-arrow-left"></i>Previous
								</a>
							{% endif %}
						</div>
					</div>
					<div class="hidden-xs hidden-sm col-md-4"></div>
					<div class="col-xs-6 col-sm-6 col-md-4">
						<div class="next-post-link">
							{% if nextJobs %}
								<a class="btn border primary waves-effect waves-dark" href="{{ path('app_jobs_show', {'id': nextJobs.id}) }}">
									Next
									<i class="fa fa-long-arrow-right"></i>
								</a>
							{% endif %}
						</div>
					</div>
				</div>
			</nav>
		</div>
	</section>
{% endblock %}


